<h1>All restaurants</h1>

<% @restaurants.each do |restaurant| %>
<%= link_to restaurant.name, restaurant_path(restaurant) %> <br><br>
<%= link_to "Delete this restaurant", restaurant_path(restaurant), method: :delete, data: {confirm: "Are you sure?"}  %>
<% end %>

<%= link_to "Add a new restaurant", new_restaurant_path %>



